{

  "name": "Nice Pulls",
  "description": "Auto formats my Github PRs",
  "icons": {
    "32": "icons/32.png",
    "72": "icons/72.png",
    "128": "icons/128.png",
    "512": "icons/512.png"
  },
  "version": "1.0",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": ["https://github.com/drivy/drivy-rails/compare/*"],
      "js": [
        "javascript/shared/constants.js",
        "javascript/shared/dom-utils.js",
        "javascript/shared/github-api.js",
        "javascript/shared/templates.js",
        "javascript/shared/label-manager.js",
        "javascript/shared/specs-calculator.js",
        "javascript/shared/commit-utils.js",
        "javascript/compare.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": ["https://github.com/drivy/drivy-rails/pull/*"],
      "js": [
        "javascript/shared/constants.js",
        "javascript/shared/dom-utils.js",
        "javascript/shared/github-api.js",
        "javascript/shared/templates.js",
        "javascript/shared/label-manager.js",
        "javascript/shared/specs-calculator.js",
        "javascript/shared/commit-utils.js",
        "javascript/shared/status-updater.js",
        "javascript/pull.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": ["https://github.com/drivy/drivy-rails/pulls/assigned/@me"],
      "js": [
        "javascript/shared/constants.js",
        "javascript/shared/dom-utils.js",
        "javascript/shared/github-api.js",
        "javascript/shared/templates.js",
        "javascript/shared/specs-calculator.js",
        "javascript/shared/commit-utils.js",
        "javascript/shared/status-updater.js",
        "javascript/index.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["secrets.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
